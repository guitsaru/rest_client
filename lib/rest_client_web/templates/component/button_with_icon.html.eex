<span class="inline-flex rounded-md shadow-sm w-full text-center">
  <button type="<%= Map.get(assigns, :type, "button") %>" class="block w-full inline-flex justify-around items-center px-4 py-2 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition ease-in-out duration-150">
    <div class="flex items-center">
      <%= render IconView, @icon, class: "-ml-1 mr-2 h-5 w-5" %>
      <%= @text %>
    </div>
  </button>
</span>
